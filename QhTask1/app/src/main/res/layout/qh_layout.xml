<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="200dp"
        android:background="@drawable/bckgrd1"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bckgrd"
            android:text="dkjbdkjbvdajvsj"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_marginTop="90dp"
            android:layout_marginStart="80dp"/>


        <LinearLayout
            android:id="@+id/amount"
            android:layout_width="255dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="99.5dp"
                android:hint="Amount you need"
                android:background="@null"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/usdAmount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:textSize="18sp"
                    android:inputType="numberDecimal"
                    android:background="@null"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_gravity="center"

                />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:hint="Amount to pay"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/localAmount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:textSize="18sp"
                    android:inputType="numberDecimal"
                    android:background="@null"
                    />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <View
            android:layout_width="1.5dp"
            android:layout_height="match_parent"
            android:background="@drawable/line"
            android:layout_toRightOf="@+id/amount"
            />

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/amount"
            android:layout_marginStart="1dp">

            <RelativeLayout
                android:id="@+id/usa"
                android:layout_width="match_parent"
                android:layout_height="99.5dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp">

                <ImageView
                    android:id="@+id/usaFlag"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:src="@drawable/ic_united_states_flag"
                    android:layout_marginTop="15dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/usaFlag"
                    android:layout_marginTop="5dp"
                    android:text="USD"
                    android:textColor="#000"
                    />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_centerInParent="true"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="99.5dp"
                android:layout_marginTop="115dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                >

                <ImageView
                    android:id="@+id/localFlag"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_flag_of_ghana"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/localFlag"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="GHS"
                    android:textColor="#000"
                    />

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>